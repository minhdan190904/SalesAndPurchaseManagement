@model SalesAndPurchaseManagement.Models.Product

@{
    ViewData["Title"] = "Thêm Sản Phẩm";

    Layout = "~/Views/Shared/MyLayoutHelper.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/product.css">
}

<div class="container">
    <div class="title">THÊM SẢN PHẨM</div>
    <form class="detail" asp-controller="Product" asp-action="Create" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Image" value="1.png" />
        <div class="image d-flex flex-column justify-content-between">
            <div class="d-flex flex-column align-content-center">
                <img id="productPreview" src="~/images/ProductImages/1.png" alt="" />
                <div class="form-group d-flex justify-content-center">
                    <label for="imageFile">Chọn Ảnh</label>
                    <input type="file" id="imageFile" name="imageFile" class="form-control" accept="image/*" onchange="previewImage(event)" style="display:none;" />
                </div>
            </div>

            <div class="buttons d-flex justify-content-center flex-wrap">
                <a class="product-btn" asp-controller="Product" asp-action="Index">Quay lại</a>
                <button class="product-btn" type="submit">Thêm</button>
            </div>
        </div>

        <div class="content">
            <!-- Các trường ProductName, Length, Width, Height, Color, v.v... giữ nguyên -->
            <!-- Ẩn trường Quantity -->
            <input type="hidden" asp-for="Quantity" value="0" />

            <div class="form-group row mb-3">
                <label asp-for="PurchasePrice" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="PurchasePrice" class="form-control decimal-input" />
                    <span asp-validation-for="PurchasePrice" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-3">
                <label asp-for="SellingPrice" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="SellingPrice" class="form-control decimal-input" />
                    <span asp-validation-for="SellingPrice" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-3">
                <label asp-for="WarrantyPeriod" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="WarrantyPeriod" class="form-control decimal-input" />
                    <span asp-validation-for="WarrantyPeriod" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-3 description">
                <label asp-for="Notes" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <textarea asp-for="Notes" class="form-control decimal-input"></textarea>
                    <span asp-validation-for="Notes" class="text-danger"></span>
                </div>
            </div>

        </div>
    </form>
</div>

@section Scripts {
    @Html.Partial("_ValidationScriptsPartial")
    <script>
        function previewImage(event) {
            const file = event.target.files[0];
            const reader = new FileReader();
            reader.onload = function (e) {
                const avatarPreview = document.getElementById('productPreview');
                avatarPreview.src = e.target.result;
            }
            reader.readAsDataURL(file);
        }
    </script>
}
