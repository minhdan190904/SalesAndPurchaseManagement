@model IEnumerable<SalesAndPurchaseManagement.Models.Size>

@{
    ViewData["Title"] = "Danh Sách Kích Cỡ";
    Layout = "~/Views/Shared/MyLayoutHelper.cshtml";
}

<div class="ms-2 mx-2">
    <a asp-controller="Size" asp-action="Create" class="btn btn-primary">
        <i class="fa fa-plus"></i> Tạo Kích Cỡ Mới
    </a>

    @if (!Model.Any())
    {
        <div class="alert alert-warning mt-3">
            Không có kích cỡ nào trong danh sách.
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Danh Sách Kích Cỡ</h3>
            </div>
            <div class="card-body">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.First().SizeId)</th>
                            <th>@Html.DisplayNameFor(model => model.First().SizeName)</th>
                            <th>Sửa</th>
                            <th>Xóa</th>
                           
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var size in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => size.SizeId)</td>
                                <td>@Html.DisplayFor(modelItem => size.SizeName)</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@size.SizeId" class="btn btn-warning btn-sm me-1">
                                        <i class="fa fa-pencil-alt"></i> Sửa
                                    </a>
                                </td>

                                <td>
                                    <a asp-action="Delete" asp-route-id="@size.SizeId" class="btn btn-danger btn-sm me-1">
                                        <i class="fa fa-trash"></i> Xóa
                                    </a>
                                </td>

                                

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>