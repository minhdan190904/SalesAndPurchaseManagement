@model SalesAndPurchaseManagement.Models.Color

@{
    ViewData["Title"] = "Chỉnh Sửa Màu";
    Layout = "~/Views/Shared/MyLayoutHelper.cshtml";
}

<section class="content">
    <div class="ms-2 mx-2">

        <form asp-controller="Color" asp-action="Edit" method="post" class="mt-3">

            <input type="hidden" asp-for="ColorId" />

            <div class="row">
                <div class="col-md-12">
                    <div class="card card-warning">
                        <div class="card-header">
                            <h3 class="card-title">Thông Tin Màu</h3>
                        </div>
                        <div class="card-body">

                            <div class="form-group row mb-3">
                                <label asp-for="ColorName" class="col-sm-4 col-form-label">Tên Màu</label>
                                <div class="col-sm-8">
                                    <input asp-for="ColorName" class="form-control" />
                                    <span asp-validation-for="ColorName" class="text-danger"></span>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-12">
                    <a asp-action="Index" class="btn btn-secondary">Quay Lại</a>
                    <button type="submit" class="btn btn-warning float-right">Cập nhật</button>
                </div>
            </div>

        </form>
    </div>
</section>

@section Scripts {
    @Html.Partial("_ValidationScriptsPartial")
}