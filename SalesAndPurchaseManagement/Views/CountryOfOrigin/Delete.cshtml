@model SalesAndPurchaseManagement.Models.CountryOfOrigin

@{
    ViewData["Title"] = "Xóa Nước Xuất Xứ";
    Layout = "~/Views/Shared/MyLayoutHelper.cshtml";
}

<section class="content">
    <div class="ms-2 mx-2">

        <h3 class="text-danger">Bạn có chắc chắn muốn xóa nước xuất xứ này?</h3>
        <div>
            <h4>Thông Tin Nước Xuất Xứ</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.CountryName)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.CountryName)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="CountryOfOriginId" />
                <input type="submit" value="Xóa" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary">Quay Lại</a>
            </form>
        </div>
    </div>
</section>