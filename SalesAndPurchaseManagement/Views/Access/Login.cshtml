@model SalesAndPurchaseManagement.Models.LoginViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/login-form.css">
    <title>Đăng Nhập</title>
</head>
<body>
    <div class="container-fluid">
        <div class="name-system">
            <h1 class="title">HỆ THỐNG QUẢN LÝ ĐỒ NỘI THẤT</h1>
        </div>
        <div class="container main-content">
            <img class="user-icon" src="~/images/user.png" alt="user icon">
            <a class="google-account-login" href="#">
                <img src="~/images/google.png" class="google-image" alt="">
                ĐĂNG NHẬP
            </a>
            <form asp-action="Login" method="post" class="login-form">
                <div class="main-form">
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" name="Email" id="name" asp-for="Email" placeholder="Email" />
                        <label for="user-name">Email</label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="password" class="form-control" name="Password" id="password" asp-for="Password" placeholder="Mật khẩu" />
                        <label for="password">Mật khẩu</label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <input type="checkbox" name="KeepLoggedIn" id="save-button" asp-for="KeepLoggedIn" />
                    <label for="save">Lưu thông tin đăng nhập</label>
                    <button type="submit" class="login" disabled>ĐĂNG NHẬP</button>

                    @if (ViewData["ValidateMessage"] != null)
                    {
                        <label style="color:red; margin-left:25px">@ViewData["ValidateMessage"]</label>
                    }
                </div>
                <div class="footer">
                    <a href="#">Quên mật khẩu? </a>
                    <p>Nếu nhân viên quên mật khẩu thì bạn có thể nhấn vào "Quên mật khẩu?" để lấy lại mật khẩu</p>
                </div>
            </form>
        </div>
    </div>
    <script src="~/js/login-form.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
</body>
</html>
