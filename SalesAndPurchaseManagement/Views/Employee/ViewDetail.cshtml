@model SalesAndPurchaseManagement.Models.Employee

@{
    ViewData["Title"] = "Chi Tiết Nhân Viên";
    Layout = "~/Views/Shared/MyLayoutHelper.cshtml";
}
<!-- About Me Box -->
<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Thông tin nhân viên</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <div class="text-center">
            @if (!string.IsNullOrEmpty(Model.Image))
            {
                <img class="profile-user-img img-fluid img-circle" src="~/images/@Model.Image" alt="Ảnh Nhân Viên" style="width: 150px; height: 150px; object-fit: cover;" />
            }
            else
            {
                <img class="profile-user-img img-fluid img-circle" src="@Url.Content("~/images/user_default.png")" alt="User profile picture">
            }
        </div>

        <h3 class="profile-username text-center">@Model.EmployeeName</h3>

        <p class="text-muted text-center">@Model.Job.JobTitle</p>

        <strong><i class="fas fa-id-card mr-1"></i> Mã Nhân Viên</strong>
        <p class="text-muted">@Model.EmployeeId</p>

        <hr>

        <strong><i class="fas fa-phone-alt mr-1"></i> Số Điện Thoại</strong>
        <p class="text-muted">@Model.PhoneNumber</p>

        <hr>

        <strong><i class="fas fa-map-marker-alt mr-1"></i> Địa Chỉ</strong>
        <p class="text-muted">@Model.Address</p>

        <hr>

        <strong><i class="fas fa-calendar-alt mr-1"></i> Ngày Sinh</strong>
        <p class="text-muted">@Model.DateOfBirth.ToString("dd/MM/yyyy")</p>

        <hr>

        <strong><i class="fas fa-envelope mr-1"></i> Email</strong>
        <p class="text-muted">@Model.Email</p>

        <hr>

        <strong><i class="fas fa-key mr-1"></i> Mật Khẩu</strong>
        <p class="text-muted">@Model.Password</p>

    </div>
    <!-- /.card-body -->
</div>
<!-- /.card -->

<a asp-action="Index" class="btn btn-secondary mt-3">Quay Lại</a>
