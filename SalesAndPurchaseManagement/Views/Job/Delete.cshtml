@model SalesAndPurchaseManagement.Models.Job

@{
    ViewData["Title"] = "Xóa Công Việc";
    Layout = "~/Views/Shared/MyLayoutHelper.cshtml";
}

<div class="ms-2 mx-2">
    <h1>Xóa Công Việc</h1>
    <h3>Bạn có chắc chắn muốn xóa công việc này không?</h3>
    <hr />

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.JobId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.JobId)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.JobTitle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.JobTitle)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Salary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Salary)
        </dd>
    </dl>

    <form asp-controller="Job" asp-action="Delete" method="post">
        <input type="hidden" asp-for="JobId" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a asp-action="Index">Trở Về Danh Sách</a>
    </form>
</div>
