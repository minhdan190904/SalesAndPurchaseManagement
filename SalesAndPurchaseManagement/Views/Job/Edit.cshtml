@model SalesAndPurchaseManagement.Models.Job

@{
    ViewData["Title"] = "Chỉnh Sửa Công Việc";
    Layout = "~/Views/Shared/MyLayoutHelper.cshtml";
}

<div class="ms-2 mx-2">
    <h1>Chỉnh Sửa Công Việc</h1>

    <form asp-controller="Job" asp-action="Edit" asp-route-id="@Model.JobId" method="post" class="mt-3">
        <input type="hidden" asp-for="JobId" />

        <div class="form-group row mb-3">
            <label asp-for="JobTitle" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="JobTitle" class="form-control" placeholder="Nhập chức danh công việc" />
                <span asp-validation-for="JobTitle" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row mb-3">
            <label asp-for="Salary" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Salary" class="form-control" placeholder="Nhập mức lương" />
                <span asp-validation-for="Salary" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row mt-4">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Chỉnh Sửa Công Việc</button>
            </div>
        </div>
    </form>
</div>
