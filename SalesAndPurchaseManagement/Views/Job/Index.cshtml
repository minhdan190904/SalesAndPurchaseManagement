@model IEnumerable<SalesAndPurchaseManagement.Models.Job>

@{
    ViewData["Title"] = "Jobs List";
    Layout = "~/Views/Shared/MyLayoutHelper.cshtml";
}

<div class="ms-2 mx-2">
    <h1>Jobs List</h1>
    <a asp-controller="Job" asp-action="Create" class="btn btn-primary">Create New Job</a>
    <table class="table mt-3">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.First().JobId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().JobTitle)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().Salary)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var job in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => job.JobId)</td>
                    <td>@Html.DisplayFor(modelItem => job.JobTitle)</td>
                    <td>@Html.DisplayFor(modelItem => job.Salary)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@job.JobId" class="btn btn-warning">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@job.JobId" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
