@model SalesAndPurchaseManagement.Models.PurchaseInvoice

@{
    ViewData["Title"] = "Tạo mới hóa đơn nhập";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="PurchaseInvoiceId"></label>
        <input asp-for="PurchaseInvoiceId" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="SupplierId"></label>
        <select asp-for="SupplierId" class="form-control" asp-items="ViewBag.SupplierId"></select>
    </div>
    <div class="form-group">
        <label asp-for="EmployeeId"></label>
        <select asp-for="EmployeeId" class="form-control" asp-items="ViewBag.EmployeeId"></select>
    </div>
    <div class="form-group">
        <label>Ngày Nhập</label>
        <input asp-for="InvoiceDate" class="form-control" value="@DateTime.Now" readonly />
    </div>

    <h4>Chi Tiết Hóa Đơn</h4>
    <div id="details">
        <div class="form-group">
            <label>Sản Phẩm</label>
            <select name="details[0].ProductId" class="form-control" asp-items="ViewBag.ProductId"></select>
        </div>
        <div class="form-group">
            <label>Số Lượng</label>
            <input type="number" name="details[0].Quantity" class="form-control" />
        </div>
        <div class="form-group">
            <label>Đơn Giá</label>
            <input type="number" name="details[0].UnitPrice" class="form-control" />
        </div>
        <div class="form-group">
            <label>Giảm Giá (%)</label>
            <input type="number" name="details[0].Discount" class="form-control" />
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Lưu</button>
</form>
