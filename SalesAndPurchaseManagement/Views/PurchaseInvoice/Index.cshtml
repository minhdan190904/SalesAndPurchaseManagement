@model IEnumerable<SalesAndPurchaseManagement.Models.PurchaseInvoice>

@{
    ViewData["Title"] = "Danh sách hóa đơn nhập";
    Layout = "~/Views/Shared/MyLayoutHelper.cshtml";
}

<h2>@ViewData["Title"]</h2>

<a asp-action="Create" class="btn btn-primary">
    <i class="fa fa-plus"></i> Tạo
</a>

<table class="table">
    <thead>
        <tr>
            <th>Số Hóa Đơn</th>
            <th>Nhà Cung Cấp</th>
            <th>Nhân Viên</th>
            <th>Ngày Nhập</th>
            <th>Tổng Tiền</th>
            <th>Chức Năng</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.PurchaseInvoiceId</td>
                <td>@(item.Supplier?.SupplierName ?? "N/A")</td>
                <td>@(item.Employee?.EmployeeName ?? "N/A")</td>
                <td>@item.InvoiceDate.ToShortDateString()</td>
                <td>@item.TotalAmount.ToString("C")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.PurchaseInvoiceId">Chi Tiết</a>
                </td>
            </tr>
        }
    </tbody>
</table>
